{
  "LOGSEARCH": {
    "LOGSEARCH_SERVER": [
      {
        "name": "solr_ui",
        "label": "Solr Web UI",
        "description": "This host-level alert is triggered if the Solr UI is unreachable.",
        "interval": 1,
        "scope": "ANY",
        "source": {
          "type": "WEB",
          "uri": {
            "http": "10.10.10.195",
            "https": "10.10.10.195",
            "default_port": 8980,
            "connection_timeout": 5.0
          },
          "reporting": {
            "ok": {
              "text": "HTTP {0} response in {2:.3f}s"
            },
            "warning": {
              "text": "HTTP {0} response from {1} in {2:.3f}s ({3})"
            },
            "critical": {
              "text": "Connection failed to {1} ({3})"
            }
          }
        }
      }
    ]
  }
}